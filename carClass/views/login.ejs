<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>login</title>
    <link href="css/bootstrap.css" rel="stylesheet">
</head>
<body>
<div class="container">
    <div class="col-lg-4">
        <h1>汽车出租管理系统</h1>
        <form>
            <div class="form-group">
                <label for="yonghuming">用户名</label>
                <input type="text" class="form-control" name="yonghuming" id="yonghuming" placeholder="">
            </div>
            <div class="form-group">
                <label for="mima">密码</label>
                <input type="password" class="form-control" name="mima" id="mima" placeholder="">
            </div>
            <button type="button" class="btn btn-success" id="zhuce">注册</button>
            <button type="button" class="btn btn-success" id="denglu">登陆</button>
        </form>
    </div>
</div>
<script src="js/jquery-1.12.3.min.js"></script>
<script src="js/bootstrap.js"></script>
<script type="text/javascript">
    $("#denglu").click(function(){
        var str = $("form").serialize();
        $.post("/checklogin",str,function(data){
            if(data.result == 1){
                alert("登陆成功！");
                window.location = "/index";
            }else if(data.result == -1){
                alert("用户名不存在!请先注册！");
            }else if(data.result == -2){
                alert("用户名存在，但是密码错误！");
            }
        })
    });
    $("#zhuce").click(function () {
        window.location="/zhuce"
    })
</script>
</body>
</html>